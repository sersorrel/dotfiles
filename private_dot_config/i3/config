# lock screen and suspend (need the delay in case the lockscreen is being regenerated)
bindsym $mod+Shift+BackSpace exec --no-startup-id "bash -c '{ notify-send -t 2000 Suspending...; sleep 10; test -e /tmp/screen-is-locked && sudo pm-suspend; } & lock'"

