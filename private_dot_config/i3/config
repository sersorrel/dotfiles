set $mode_monitor monitor (hjklcp)
mode "$mode_monitor" {
        bindsym h move workspace to output left
        bindsym j move workspace to output down
        bindsym k move workspace to output up
        bindsym l move workspace to output right
        bindsym c move workspace to output current
        bindsym p move workspace to output primary

        bindsym Shift+h move container to output left
        bindsym Shift+j move container to output down
        bindsym Shift+k move container to output up
        bindsym Shift+l move container to output right
        bindsym Shift+c move container to output current
        bindsym Shift+p move container to output primary

        bindsym u exec --no-startup-id xrandr --output HDMI-2 --auto --above eDP-1
        bindsym d exec --no-startup-id xrandr --output HDMI-2 --off

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+x mode "default"
}
bindsym $mod+x mode "$mode_monitor"

set $mode_shutdown "(l)ogout, (s)hutdown, (r)eboot"
mode $mode_shutdown {
        bindsym l exit
        bindsym r exec --no-startup-id systemctl reboot
        bindsym s exec --no-startup-id shutdown now
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+Escape mode "default"
}
bindsym $mod+Escape mode $mode_shutdown
# bindsym Control+Mod1+Delete exec --no-startup-id

set $mode_bluetooth "bluetooth: (e)nable, (d)isable"
# TODO: somehow add `rfkill -o SOFT -n list bluetooth` to this maybe idk
mode $mode_bluetooth {
        bindsym e exec rfkill unblock bluetooth; mode "default"
        bindsym d exec rfkill block bluetooth; mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+Escape mode "default"
}
bindsym $mod+b mode $mode_bluetooth

